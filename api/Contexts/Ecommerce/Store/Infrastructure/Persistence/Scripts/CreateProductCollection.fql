CreateCollection({ name: 'Product' })

CreateIndex({
  name: "product_sort_by_ts_asc",
  source: Collection("Product"),
  values: [
    { field: ["ts"] },
    { field: ["ref"] }
  ]
})

CreateIndex({
  name: "product_sort_by_ts_desc",
  source: Collection("Product"),
  values: [
    { field: ["ts"], reverse: true },
    { field: ["ref"] }
  ]
})