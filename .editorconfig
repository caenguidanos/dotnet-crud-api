root = true

[*.cs]
indent_size = 4
max_line_length = 170
# Blank lines
resharper_blank_lines_inside_region = 1
resharper_csharp_blank_lines_inside_region = 1
resharper_csharp_blank_lines_around_region = 1
resharper_blank_lines_around_region = 1
resharper_csharp_keep_blank_lines_in_code = 1
resharper_keep_blank_lines_in_code = 1
resharper_csharp_blank_lines_around_multiline_case_section = 1
resharper_blank_lines_around_multiline_case_section = 1
resharper_csharp_blank_lines_around_block_case_section = 1
resharper_blank_lines_around_block_case_section = 1
resharper_csharp_blank_lines_before_multiline_statements = 0
resharper_blank_lines_before_multiline_statements = 0
resharper_csharp_blank_lines_after_multiline_statements = 1
resharper_blank_lines_after_multiline_statements = 1
resharper_csharp_blank_lines_after_block_statements = 1
resharper_blank_lines_after_block_statements = 1
resharper_csharp_blank_lines_around_single_line_local_method = 1
resharper_blank_lines_around_single_line_local_method = 1
resharper_csharp_blank_lines_around_local_method = 1
resharper_blank_lines_around_local_method = 1
# Define the 'private_fields' symbol group:
dotnet_naming_symbols.private_fields.applicable_kinds = field
dotnet_naming_symbols.private_fields.applicable_accessibilities = private
# Define the 'private_static_fields' symbol group
dotnet_naming_symbols.private_static_fields.applicable_kinds = field
dotnet_naming_symbols.private_static_fields.applicable_accessibilities = private
dotnet_naming_symbols.private_static_fields.required_modifiers = static
# Define the 'underscored' naming style
dotnet_naming_style.underscored.capitalization = camel_case
dotnet_naming_style.underscored.required_prefix = _
# Define the 'private_fields_underscored' naming rule
dotnet_naming_rule.private_fields_underscored.symbols = private_fields
dotnet_naming_rule.private_fields_underscored.style = underscored
dotnet_naming_rule.private_fields_underscored.severity = error
# Define the 'private_static_fields_none' naming rule
dotnet_naming_rule.private_static_fields_none.symbols = private_static_fields
dotnet_naming_rule.private_static_fields_none.style = underscored
dotnet_naming_rule.private_static_fields_none.severity = none
# Using inside namespace
csharp_using_directive_placement = inside_namespace
# Namespace file scoped
csharp_style_namespace_declarations = file_scoped
# Use expression bodies for methods
csharp_style_expression_bodied_methods = true
csharp_style_expression_bodied_lambdas = true